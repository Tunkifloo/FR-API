# ===== CONFIGURACIÓN DE BASE DE DATOS =====
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=reconocimiento_facial
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# ===== CONFIGURACIÓN DE LA APLICACIÓN =====
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
LOG_LEVEL=INFO

# ===== CONFIGURACIÓN DE ARCHIVOS =====
UPLOAD_DIR=uploads
MODELS_DIR=models
BACKUP_DIR=exports
JSON_BACKUP_DIR=json_backup

# Configuración de archivos subidos
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,gif

# ===== CONFIGURACIÓN DE RECONOCIMIENTO FACIAL MEJORADO =====
# Sistema mejorado (true=mejorado, false=tradicional)
USE_ENHANCED_PROCESSING=true
FEATURE_METHOD=enhanced

# Umbrales de reconocimiento
DEFAULT_SIMILARITY_THRESHOLD=0.70
MIN_THRESHOLD=0.50
MAX_THRESHOLD=0.90
ADAPTIVE_THRESHOLD=true

# Configuración de detección de rostros
USE_MULTIPLE_DETECTORS=true
USE_DLIB=false

# Configuración de extracción de características
NORMALIZE_FEATURES=true
USE_MULTI_SCALE_LBP=true
INCLUDE_SYMMETRY_FEATURES=true
TARGET_FEATURE_SIZE=512
FACE_SIZE=(128,128)
MIN_IMAGE_SIZE=(100,100)

# Configuración de comparación multi-métrica
USE_CONSISTENCY_CHECK=true
MIN_CONSISTENCY=0.7

# Pesos para comparación (solo si USE_ENHANCED_PROCESSING=true)
COMPARISON_WEIGHT_COSINE=0.35
COMPARISON_WEIGHT_CORRELATION=0.20
COMPARISON_WEIGHT_EUCLIDEAN=0.20
COMPARISON_WEIGHT_MANHATTAN=0.15
COMPARISON_WEIGHT_SEGMENTS=0.10

# ===== CONFIGURACIÓN DE MIGRACIÓN =====
# Para desarrollo: false, para producción: true
MIGRATION_ENABLED=false
FORCE_MIGRATION=false
BACKUP_BEFORE_MIGRATION=true

# Configuración de estudiantes
MIN_STUDENT_ID_LENGTH=6
MAX_STUDENT_ID_LENGTH=20